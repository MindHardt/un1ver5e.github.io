---
import Image from 'astro/components/Image.astro';

export interface Props {
    name: string,
    image: ImageMetadata
}
const { name, image } = Astro.props;
---

<div class="elevated flex flex-col gap-1 items-center justify-end p-2">
    <Image src={image} alt='' width={256} height={256} class="rounded-md w-full" />
    <h3 class="text-lg">{name}</h3>
</div>
