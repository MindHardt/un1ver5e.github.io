---
import Image from 'astro/components/Image.astro';
import github from "@/assets/github.png";
import telegram from "@/assets/telegram.png";
import email from "@/assets/email.png";

const links : { url: string, image: ImageMetadata, name: string }[] = [
    {
        url: 'https://github.com/MindHardt',
        image: github,
        name: 'Github'
    },
    {
        url: 'https://t.me/un1ver5e',
        image: telegram,
        name: 'Telegram'
    },
    {
        url: 'mailto:igorbabin2002@gmail.com',
        image: email,
        name: 'Email'
    }
]

---

<h2 class="text-3xl border-b pb-1 font-semibold">Ссылки на меня</h2>
<div class="flex flex-col gap-1">
    {links.map(l =>
        <a href={l.url} class="flex flex-row items-center gap-1 p-2 elevated">
            <Image src={l.image} alt='' width={40} height={40} class="size-8" />
            <span class="font-semibold">{l.name}</span>
        </a>)}
</div>
